<Window x:Class="ShawzinBot.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:ShawzinBot.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:cal="http://www.caliburnproject.org"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="ShawzinBot" Height="700" Width="900"
        MinHeight="600" MinWidth="800">
    
    <Window.Resources>
        <LinearGradientBrush x:Key="OrangeGradient" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#FFD69016"/>
            <GradientStop Color="#FFD6511E" Offset="0.757"/>
            <GradientStop Color="#FF9B330D" Offset="0.807"/>
        </LinearGradientBrush>
        
        <Style x:Key="OrangeButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFloatingActionMiniButton}">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="{StaticResource OrangeGradient}"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{StaticResource OrangeGradient}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="ShawzinBot" Grid.Column="0" 
                       HorizontalAlignment="Left" VerticalAlignment="Center" 
                       Margin="15,0" FontSize="18" FontWeight="Bold" 
                       Foreground="White"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="MinimizeProgram" Click="OnMinimizeProgram" 
                        Width="40" Height="40" Style="{StaticResource OrangeButtonStyle}"
                        Foreground="White">
                    <materialDesign:PackIcon Kind="Minus" Width="20" Height="20"/>
                </Button>
                <Button x:Name="CloseProgram" Click="OnCloseProgram" 
                        Width="40" Height="40" Style="{StaticResource OrangeButtonStyle}"
                        Foreground="White">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Import Section -->
            <Border Grid.Row="0" BorderBrush="#44444444" BorderThickness="1" 
                    Background="#22FFFFFF" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="MIDI Library" FontSize="16" FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="CurrentFolder" Text="No folder selected" 
                                   Foreground="#888888" Margin="0,0,0,5"/>
                        <TextBlock Text="Select a folder to import MIDI files and create a playlist" 
                                   Foreground="#666666" FontSize="12"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="OpenFolder" Content="Open Folder" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{StaticResource OrangeGradient}" 
                                Foreground="White" Margin="0,0,10,0"/>
                        <Button x:Name="OpenFile" Content="Open File" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Foreground="{StaticResource OrangeGradient}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Playlist and Player Section -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Playlist -->
                <Border Grid.Column="0" BorderBrush="#44444444" BorderThickness="1" 
                        Background="#22FFFFFF" CornerRadius="5" Margin="0,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Playlist" FontSize="14" FontWeight="Bold" 
                                   Margin="15,15,15,10"/>
                        
                        <ListBox Grid.Row="1" x:Name="MidiPlaylist" 
                                 SelectedItem="{Binding SelectedMidiFile, Mode=TwoWay}"
                                 Background="Transparent" BorderThickness="0"
                                 Margin="10,0,10,10">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#33FFFFFF" CornerRadius="3" 
                                            Margin="0,2" Padding="10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Text="{Binding DisplayName}" 
                                                       FontWeight="Bold" TextWrapping="Wrap"/>
                                            
                                            <TextBlock Grid.Row="1" Text="{Binding CompatibilityNotes}" 
                                                       Foreground="#888888" FontSize="11" 
                                                       TextWrapping="Wrap" Margin="0,3,0,0"/>
                                            
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                                        Margin="0,5,0,0">
                                                <TextBlock Text="{Binding TrackCount}" 
                                                           Foreground="#666666" FontSize="10"/>
                                                <TextBlock Text=" tracks • " Foreground="#666666" FontSize="10"/>
                                                <TextBlock Text="{Binding Duration}" 
                                                           Foreground="#666666" FontSize="10"/>
                                                <TextBlock Text="s" Foreground="#666666" FontSize="10"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Player Controls -->
                <Border Grid.Column="1" BorderBrush="#44444444" BorderThickness="1" 
                        Background="#22FFFFFF" CornerRadius="5">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Song Info -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="SongName" Text="No song selected" 
                                           FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="Select a MIDI file from the playlist to start playing" 
                                           Foreground="#888888"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="Previous" Style="{StaticResource OrangeButtonStyle}" 
                                        Width="40" Height="40" Margin="0,0,10,0">
                                    <materialDesign:PackIcon Kind="SkipPrevious" Width="24" Height="24"/>
                                </Button>
                                <Button x:Name="PlayPause" Style="{StaticResource MaterialDesignFloatingActionButton}" 
                                        Width="60" Height="60" Background="{StaticResource OrangeGradient}" 
                                        Foreground="White" Margin="0,0,10,0">
                                    <materialDesign:PackIcon Kind="{Binding Path=PlayPauseIcon}" Width="32" Height="32"/>
                                </Button>
                                <Button x:Name="Next" Style="{StaticResource OrangeButtonStyle}" 
                                        Width="40" Height="40">
                                    <materialDesign:PackIcon Kind="SkipNext" Width="24" Height="24"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Progress Bar -->
                        <Grid Grid.Row="1" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" x:Name="CurrentTime" Text="0:00" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            
                            <Slider Grid.Column="1" x:Name="SongSlider" 
                                    VerticalAlignment="Center" Maximum="{Binding Path=MaximumTime}">
                                <Slider.Foreground>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#FFD69016"/>
                                        <GradientStop Color="#FFD6511E" Offset="0.757"/>
                                    </LinearGradientBrush>
                                </Slider.Foreground>
                            </Slider>
                            
                            <TextBlock Grid.Column="2" x:Name="TotalTime" Text="0:00" 
                                       VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>

                        <!-- MIDI Input Device -->
                        <Border Grid.Row="2" Background="#44444444" CornerRadius="3" 
                                Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="MIDI Input Device" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="MidiInputs" Width="200" HorizontalAlignment="Left"
                                              SelectedItem="{Binding Path=SelectedMidiInput, Mode=TwoWay}"
                                              DisplayMemberPath="DeviceName"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" x:Name="RefreshDevices" 
                                        Style="{StaticResource OrangeButtonStyle}" Width="40" Height="40">
                                    <materialDesign:PackIcon Kind="Reload" Width="24" Height="24"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Scale Display - Prominently positioned -->
                        <Border Grid.Row="3" Background="#FFD69016" CornerRadius="3" 
                                Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Current Scale" FontWeight="Bold" Margin="0,0,0,5" Foreground="White"/>
                                    <TextBlock x:Name="Scale" Text="Chromatic" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                    <TextBlock Text="Important!" FontWeight="Bold" Foreground="White" FontSize="12"/>
                                    <TextBlock Text="Scale affects how notes sound" Foreground="White" FontSize="10"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- MIDI Tracks -->
                        <Border Grid.Row="4" Background="#44444444" CornerRadius="3" 
                                Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="MIDI Tracks" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ScrollViewer MaxHeight="120" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="MidiTracks">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox x:Name="MidiTrack" Content="{Binding TrackName}" 
                                                          IsChecked="{Binding IsChecked}" 
                                                          Margin="0,2" Foreground="White"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <!-- Settings -->
                        <Border Grid.Row="5" Background="#44444444" CornerRadius="3" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Settings" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <CheckBox x:Name="EnableVibrato" Content="Enable vibrato" 
                                              Margin="0,2" Foreground="White"/>
                                    <CheckBox x:Name="TransposeNotes" Content="Transpose notes" 
                                              Margin="0,2" Foreground="White"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Playback Speed" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <ComboBox x:Name="MidiSpeeds" Width="120" HorizontalAlignment="Left"
                                              SelectedItem="{Binding Path=SelectedMidiSpeed, Mode=TwoWay}"
                                              DisplayMemberPath="SpeedName"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Version Info -->
            <TextBlock Grid.Row="2" Text="{Binding Path=VersionString}" 
                       HorizontalAlignment="Center" Margin="0,15,0,0" 
                       Foreground="#888888" FontSize="12"/>
        </Grid>
    </Grid>
</Window>